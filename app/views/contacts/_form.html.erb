<%= form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @contact.errors.any? %>
    
      <h2>Errors</h2>
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    
  <% end %>
  <div class="container">
    <div class="control-group">
      <%= f.label :first_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :first_name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :last_name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :last_name, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :email_address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email_address, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :state, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :state, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :city, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :city, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :message, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :message, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Send your message", :class => 'btn btn-primary' %>
      <%= link_to t('.reset', :default => t("helpers.links.Reset Fields")),
                  contact_path, :class => 'btn btn-inverse' %>
    </div>
  </div>
<% end %>

